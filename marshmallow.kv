
<MarshmallowGame>:
    background: backgroundPic
    ball: marshmallow_ball

    Background:
        id: backgroundPic

    Ball:
        id: marshmallow_ball
        center: self.parent.center

    Block:
        id: blk

<Background>:
    #Make sure background is always size of window
    size: self.parent.size
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source:"brick.jpg"

        Rectangle:
            pos: self.pos[0], self.pos[1]+self.size[1]
            size: self.size
            source:"brick.jpg"

<Block>:
    size: 100, 100
    canvas:
        Rectangle:
            size: 100, 100
            pos: self.pos
            source: 'block.png'

<Ball>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: 50, 50
            source: "ball.png"

<ScreenManager>:
    id: screen_manager

    Screen:
        name: 'MenuScreen'
        FloatLayout:
        #Background picture
            canvas:
                Rectangle:
                    source:"marshmallow.jpg"
                    pos: self.pos
                    size: self.size
        #Header
            Label:
                text: 'MARSHMALLOW'
        #Play Button
            Button:
                text: 'PLAY'
                pos_hint: {'x': 0.25, 'y': 0.1}
                size_hint: 0.5, 0.1
                on_press: app.root.current = 'PlayScreen'

    Screen:
        name: 'PlayScreen'
        
		MarshmallowGame:
            id: game

        FloatLayout:
            Button:
                text: "Menu"
                pos_hint: {'x': 0.01, 'y': 0.95}
                size_hint: 0.1, 0.05
                on_press: app.root.current = "MenuScreen"

    Screen:
        name: 'ResultScreen'
        Label:
            text: 'This is ResultScreen'
        Button:
            text: 'Goto PlayScreen'
            pos_hint: {'x': 0.7, 'y': 0.1}
            size_hint: 0.3, 0.1
            on_press: app.root.current = 'PlayScreen'
        Button:
            text: 'Go to StartScreen'
            pos_hint: {'x': 0.0, 'y': 0.1}
            size_hint: 0.3, 0.1
            on_press: app.root.current = 'MenuScreen'
